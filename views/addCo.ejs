<%- include('partials/addHeader') %>

<div class="container mt-5">
  <h1>Add CO for Exam: <%=Exams.examName%></h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/addCo" method="POST">
            <input type="hidden" name="examName" value="<%=Exams.examName%>">

            <%if(Co!=false){%>
                <%Co.forEach(function(co){%>
                    <p><%=co.coNo%>) <%=co.co%></p>
                <%})%>
            <%}%>
            
            <div class="form-group">
                <label for="coNo">*CO No.</label>
                <input type="text" required class="form-control" name="coNo" placeholder="CO1">
                <p style="color:red;"><%= message %> </p>
              </div>
              <div class="form-group">
                <label for="question">*Co</label>

                <input type="text" required class="form-control" name="co" placeholder="Illustrate concepts of Process Synchronization and deadlock">
              </div>
              
              
            <button type="submit" class="btn btn-dark">Add CO</button>
          </form>

        </div>
        <a href="/back" class="btn btn-light btn-lg" >Back to Home page</a>
      </div>
    </div>

