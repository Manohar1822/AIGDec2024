<div class="container mt-5" >
  <h1>Organization Login</h1>

  <div class="row" >
    <div class="col-sm-8">
      <div class="card" style="background-image: url('WhiteBG.jpg'); background-size: cover;">
        <div class="card-body" >

          <!-- Makes POST request to /login route -->
          <form action="/loginorganization" method="POST">
            <div class="form-group">
              <label for="email">*Email</label>
              <p style="color:red;"><%= message %> </p>
              <input type="email" required class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password">*Password</label>
              <input type="password" required class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
            
          </form>

        </div>
        <a href="/registerorganization" class="btn btn-light btn-lg">New User? Register</a>
      </div>
    </div>

