<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Create Exam</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/createExam" method="POST">
            <div class="form-group">
                <label for="choose Class">*Choose Class</label>
                <select name="classId" required>
                    <%if(Classes!=false){%>
                        <%Classes.forEach(function(clas){%>
                          <option value="<%=clas._id%>"><%=clas.className%></option>
                        <%})%>
                      <%}%>
                </select>
              </div>
            <div class="form-group">
                <label for="examName">*exam-Name</label>
                <p style="color:red;"><%= message %> </p>
                <input type="text" required class="form-control" name="examName" placeholder="MSE-sem1 TY BTech A, 2022">
              </div>
              <div class="form-group">
                <label for="Schedule On">*Schedule exam start Date & Time</label>
                
                <input type="datetime-local" required class="form-control" name="examDate" >
              </div>
              <div class="form-group">
                <label for="Schedule On Time">*Schedule exam end Date & Time</label>
                
                <input type="datetime-local" required class="form-control" name="examEndDate" >
              </div>
            
            <button type="submit" class="btn btn-dark">Create Exam</button>
          </form>

        </div>
        <a href="/back" class="btn btn-light btn-lg" >Back to Home page</a>
      </div>
    </div>

